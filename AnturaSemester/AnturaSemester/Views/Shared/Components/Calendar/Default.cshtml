<div>holiday</div>    

@if (ViewBag.Today = DayOfWeek.Saturday)
{
    <h3>@ViewBag.MessageSaturday</h3>
}


else if (ViewBag.Today = DayOfWeek.Sunday)
{

    <h3>@ViewBag.MessageSunday</h3>
}
else { ViewBag.Today = DateTime.Today; }

    <table class="table">
        <tbody>
            <tr>               
                @foreach  (var x in ViewBag.Column) // the box is highlighted red
                {
                    if (x.weekEnd == true)
                    {
                        <td bgcolor="#e2dede"><font color="red">@x.Day</font></td>

                    }
                    else
                    {
                        <td>@x.Day</td>
                    }
                }
               

                    </table>
        </tbody>
    </table>



